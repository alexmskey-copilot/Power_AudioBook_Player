        android:id="@+id/favoriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addVolume"
        app:srcCompat="@drawable/ic_favorite_icon_foreground" />

    <Button
        android:id="@+id/speedDownButton"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_find_next_holo_dark"
        app:iconSize="26dp"
        app:layout_constraintStart_toEndOf="@id/favoriteButton"
        app:layout_constraintTop_toBottomOf="@id/addVolume" />

