            android:gravity="right"
            android:text="@string/text_speed_play"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/speed_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
