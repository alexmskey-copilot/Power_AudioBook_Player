<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-6dp"
        android:foregroundGravity="top"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/speedDownButton"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/headphones" />

    <TextView
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:text="@string/book_not_sel"
        android:textIsSelectable="true"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="26sp"
        app:autoSizeMinTextSize="16sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/parts_select_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingStart="6dp"
        android:paddingTop="4dp"
        android:paddingEnd="6dp"
        android:paddingBottom="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/reading_progress"
        app:srcCompat="@drawable/ic_parts_direct_select" />

    <SeekBar
        android:id="@+id/reading_progress"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:contextClickable="false"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:importantForAccessibility="no"
        android:max="10"
        android:progress="0"
        android:progressDrawable="@drawable/seek_bg"
        android:thumb="@drawable/ic_rectangle"
        android:thumbTint="#F44336"
        android:thumbTintMode="src_in"
        app:layout_constraintEnd_toStartOf="@id/menu_button"
        app:layout_constraintStart_toEndOf="@id/parts_select_button"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        app:tickMarkTint="@color/gray" />

    <ImageButton
        android:id="@+id/menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingStart="6dp"
        android:paddingTop="4dp"
        android:paddingEnd="6dp"
        android:paddingBottom="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/reading_progress"
        app:layout_constraintTop_toTopOf="@id/reading_progress"
        app:srcCompat="@drawable/ic_menu" />

    <SeekBar
        android:id="@+id/seekBar_part_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/seek_bg"
        android:thumb="@drawable/ic_rectangle"
        android:thumbTint="@color/favorite_icon_background"
        app:layout_constraintEnd_toEndOf="@id/headerText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reading_progress" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/PlayPauseButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/play"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_media_play"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="56dp"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@id/back10"
        app:layout_constraintStart_toStartOf="@id/skipToPreviousButton" />

    <LinearLayout
        android:id="@+id/trackNavi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="26dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/reading_progress"
        app:layout_constraintStart_toStartOf="@id/reading_progress"
        app:layout_constraintTop_toBottomOf="@id/headerText">

        <LinearLayout
            android:id="@+id/back_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/total_ed_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sounded_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="__:__"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/current_stat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <!--
            <TextView
                android:id="@+id/track_total_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tracks_total"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/allTrack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                app:autoSizeTextType="uniform" />
-->

            <TextView
                android:id="@+id/curTrack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="__"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/track_out_of"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="clip_vertical"
                android:text="@string/tracks_out_of" />

            <TextView
                android:id="@+id/maxTrack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="__"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hours_total_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hours_total"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/totalDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/future_stat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/total_fut_v"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/future_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="__:__"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/part_name_lh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/headerText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/headerText"
        app:layout_constraintTop_toBottomOf="@id/seekBar_part_place">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <!--
                        <TextView
                            android:id="@+id/passedView_min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0" />

                        <TextView
                            android:id="@+id/passedView_sec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0" />
            -->
        </LinearLayout>

        <TextView
            android:id="@+id/part_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:textIsSelectable="true"
            android:gravity="center_horizontal"
            android:maxLines="4"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="14sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintHorizontal_bias="0.0" />

    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/skipToPreviousButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/previous"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_media_previous"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="56dp"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@id/back_246_text"
        app:layout_constraintStart_toEndOf="@id/divider"
        app:layout_constraintStart_toStartOf="@id/divider" />

    <LinearLayout
        android:id="@+id/total_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="26dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/headerText"
        app:layout_constraintStart_toStartOf="@id/seekBar_part_place"
        app:layout_constraintTop_toBottomOf="@id/reading_progress">


        <TextView
            android:id="@+id/passedView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeTextType="uniform" />

        <!--
        <TextView
            android:id="@+id/curTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
