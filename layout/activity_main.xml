                android:background="#00FFFFFF"  -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/skipToNextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/next"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_media_next"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="56dp"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@id/back_246_text"
        app:layout_constraintStart_toStartOf="@id/divider3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fwd10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/FastForward"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_media_ff"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="56dp"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/skipToNextButton"
        app:layout_constraintEnd_toEndOf="@id/skipToNextButton"
        app:layout_constraintStart_toStartOf="@id/skipToNextButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/rewind"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_media_rew"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="56dp"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/skipToPreviousButton"
        app:layout_constraintEnd_toEndOf="@id/skipToPreviousButton"
        app:layout_constraintStart_toStartOf="@id/skipToPreviousButton" />

    <TextView
        android:id="@+id/back_246_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:editable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="left"
        android:inputType="textPersonName"
        android:text="@string/back_in_time"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/back_246"
        app:layout_constraintStart_toStartOf="@id/back_246"
        tools:ignore="TouchTargetSizeCheck" />

    <SeekBar
        android:id="@+id/addVolume"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/seek_bg"
        android:thumb="@drawable/ic_rectangle"
        app:layout_constraintEnd_toStartOf="@id/undo_moving"
        app:layout_constraintStart_toStartOf="@id/headerText"
        app:layout_constraintTop_toBottomOf="@id/part_name_lh" />
